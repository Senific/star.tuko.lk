# Environment Variables for Beauty 2026

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL Connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/beauty2026?schema=public"

# ===========================================
# AUTHENTICATION
# ===========================================
# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Tuko OAuth Configuration
# Register your app with Tuko admin to get client_id and client_secret
# Docs: See oauth_integration_guide.md from Tuko
NEXT_PUBLIC_TUKO_AUTH_URL="https://tuko.senific.com/routes/oauth/authorize"
TUKO_TOKEN_URL="https://tuko.senific.com/routes/oauth/token"
TUKO_USERINFO_URL="https://tuko.senific.com/routes/oauth/userinfo"
TUKO_REVOKE_URL="https://tuko.senific.com/routes/oauth/revoke"

# OAuth Client Credentials (get from Tuko admin)
NEXT_PUBLIC_TUKO_CLIENT_ID="your-tuko-client-id"
TUKO_CLIENT_SECRET="your-tuko-client-secret"

# OAuth Redirect URI (register this with Tuko admin)
# Production: https://star.tuko.lk/api/auth/tuko/callback
NEXT_PUBLIC_TUKO_REDIRECT_URI="http://localhost:3000/api/auth/tuko/callback"

# ===========================================
# FILE STORAGE
# ===========================================
# Cloudinary (for photo uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ===========================================
# EMAIL
# ===========================================
# SMTP Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="noreply@star.tuko.lk"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="Beauty 2026 <noreply@star.tuko.lk>"

# ===========================================
# APP CONFIG
# ===========================================
# Public URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Beauty 2026"

# ===========================================
# ADMIN
# ===========================================
# Initial Super Admin (used for seeding)
ADMIN_EMAIL="admin@tuko.lk"
ADMIN_PASSWORD="admin123"
